@model BusSchedule.Data.BusInfo

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>BusInfo</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="BusNumber" class="control-label"></label>
                <input asp-for="BusNumber" class="form-control" />
                <span asp-validation-for="BusNumber" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="busName" class="control-label"></label>
                <input asp-for="busName" class="form-control" />
                <span asp-validation-for="busName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="BusSit" class="control-label"></label>
                <input asp-for="BusSit" class="form-control" />
                <span asp-validation-for="BusSit" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="BusDriver" class="control-label"></label>
                <select class="form-control" name="BusDriver">
                    @foreach (var dv in ViewBag.driver)
                    {
                        <option disabled selected> Select Driver</option>
                        <option value="@dv.DrverName"> @dv.DrverName</option>
                    }
                </select>
                <span asp-validation-for="BusDriver" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
